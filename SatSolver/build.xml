<project name="SatSolver">

    <property name="src.dir" value="src" />
    <property name="build.dir" value="build" />
	 <property name="lib.dir" value="../CompactJVMLib/build/jar" />
    <property name="classes.dir" value="${build.dir}/classes" />

	<path id="classpath">
        <fileset dir="${lib.dir}" includes="**/*.jar" />
    </path>
	
    <target name="clean">
        <delete dir="build"/>
    </target>
	
    <target name="compile">
        <mkdir dir="${src.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" encoding="utf-8"
		includeantruntime="false" classpathref="classpath" />
    </target>
	
</project>